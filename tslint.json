{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "max-line-length": [true, 80],
    "semicolon": [true, "never"],
    "ordered-imports": false,
    "interface-name": false,
    "no-console": false,
    "jsx-no-lambda": false,
    "jsx-boolean-value": false,
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}
